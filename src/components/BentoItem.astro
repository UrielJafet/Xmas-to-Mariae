---
    interface Props{
        title:string;
        class?:string;
    }

    const{title}=Astro.props;
---

<article 
    class={`
        ${Astro.props.class}
        col-span-5
        relative rounded-lg overflow-hidden
        backdrop-blur-md
        border border-gray-200/50
        shadow-inner shadow-white/10
        group
    `}>

    <div class="
        absolute z-10 bottom-0 top-0 w-full h-full
        bg-linear-to-b from-transparent from-40% via-black/20 to-black/70
    "></div>

    <slot name="img" />
    <div class="relative select-none flex flex-col gap-1 p-4 sm:p-6 text-lg z-20 justify-end h-full">
        <h2 class="font-bold text-balance text-primary mb-4 text-base sm:text-lg md:text-xl">{title}</h2>

        <slot name="content" />
    </div>
</article>